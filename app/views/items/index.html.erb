<div class="container-fluid">
  <div class="row mx-1">
    <h2 class="mt-4 col-12 text-center border-bottom">Snacks</h2>
    <table class="table table-bordered genre-table mt-4 col-md-2 col-sm-3 col-xs-2">
      <thead>
        <tr>
          <th>Categories</th>
        </tr>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.genre_name, search_search_path('search[value]': genre.id, 'search[how]': "match"), style:"color: black;" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    
    <div class="items col-md-10 col-sm-9 col-xs-10 mx-auto mt-4" style="padding-bottom: 50px;">	
      
      <% @items.each do |item| %>
      <div class="card" style="width: 18rem; min-height: 340px;">
        <span><%= attachment_image_tag item, :image, size:"190x160", fallback: "no-image.jpeg",class:"card-img-top", format: "jpeg" %></span>
        <div class="card-body">
          <h5 class="card-title" style="height: 40%;"><%= item.item_name %></h5>
          <p class="card-text">$ <%= number_with_precision(item.price, precision: 2) %></p>
          <%= link_to 'Add to cart', root_path, class: 'btn btn-primary' %>
        </div>
      </div>
      <% end %>
      
    </div>
    
  </div>
</div>
