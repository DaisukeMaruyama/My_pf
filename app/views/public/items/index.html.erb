<div class="container-fluid">
  <div class="row">
    <h2 class="py-3 col-12 text-center" style="border-bottom: 2px dashed #EBE9DE; background-color: #101626; color:white;">Snacks</h2>
    <table class="table table-bordered genre-table mt-4 col-md-2 col-sm-3 col-xs-2 px-1">
      <thead>
        <tr>
          <th>Categories</th>
        </tr>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.genre_name, search_genre_search_path('search[content]': genre.id), style:"color: black;" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <div class="items col-md-10 col-sm-9 col-xs-10 mx-auto mt-4" style="padding-bottom: 50px;">

      <% @items.each do |item| %>
      <div class="card" style="width: 18rem; min-height: 340px;">
        <span><%= attachment_image_tag item, :image, size:"190x160", fallback: "no-image.jpeg",class:"card-img-top", format: "jpeg" %></span>
        <div class="card-body">
          <h5 class="card-title" style="height: 40%;"><%= item.item_name %></h5>
          <p class="card-text">$ <%= number_with_precision(item.price, precision: 2) %></p>
          <%= link_to 'Explore', item_path(item), class: 'btn btn-primary' %>
        </div>
      </div>
      <% end %>

    </div>

  </div>
</div>
