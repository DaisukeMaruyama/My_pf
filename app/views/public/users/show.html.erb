<div class="container">
  <div class="row">
    <div class="col-6" style="margin-top: 20px;">
      <h2 class="my-page-title">Your page</h2>

      <div class="mypage-flex-group mypage-register-info-header mt-4">
          <span>Your registered information</span>
          <%= link_to 'Edit',edit_user_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>

      <div class="form-group row mt-2">
        <label class="col-md-3"><strong>Name</strong></label>
        <div class="col-md-9">
          <%= @user.first_name %> <%= @user.last_name %>
        </div>
      </div>
      
      <div class="form-group row mt-2">
        <label class="col-md-3"><strong>Email</strong></label>
        <div class="col-md-9">
          <%= @user.email %>
        </div>
      </div>

      <div class="form-group row mt-2">
         <label class="col-md-3"><strong>Address</strong></label>
        <div class="col-md-9">
          <%= @user.address %>
        </div>
      </div>
      
      <div class="form-group row mt-2">
         <label class="col-md-3"><strong>City</strong></label>
        <div class="col-md-9">
          <%= @user.city %>
        </div>
      </div>
      
      <div class="form-group row mt-2">
         <label class="col-md-3"><strong>Country</strong></label>
        <div class="col-md-9">
          <%= @user.country %>
        </div>
      </div>
      


      <div class="mypage-flex-group">
        <span>配送先</span>
        <%= link_to '一覧を見る', root_path, class: "btn btn-primary" %>
      </div>
      <div class="mypage-flex-group">
        <span>注文履歴</span>
        <td><%= link_to '一覧を見る', orders_path, class: "btn btn-primary" %></td>
      </div>
    </div>
  </div>
</div>
