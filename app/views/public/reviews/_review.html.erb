
<div class="pt-2 px-2" style="background-color: #fffffe; border: 2px solid #272343; border-radius: 2px;">
    <%# rateを表示 %>


    <!--星評価-->
    <div id="star-rate-<%= review.id %>">Rate : </div>
        <script>
        $('#star-rate-<%= review.id %>').empty(); 
          $('#star-rate-<%= review.id %>').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            readOnly: true,
            score: <%= review.rate %>,
          });
        </script>
        <!--/星評価-->


    <div class="text-left">
        <p>Posted By：<%= review.user.first_name %> <%= review.user.last_name %></p>
        <p><%= review.comment %></p>
    </div>

    <div class="text-right">
        <p>
            Date：<%= review.created_at.strftime('%d/%m/%Y') %>
            <% if user_signed_in? %> 
                <% if review.user == current_user %>
                    <span>|</span>
                    <%= link_to 'Edit', edit_item_review_path(review.item, review), method: :get, class:'btn btn-default' %>
                    <span>|</span>
                    <%= link_to item_review_path(review.item, review), method: :delete, class: "btn btn-sm btn-danger" do %>
                        Delete <i class="fas fa-trash"></i>
                    <% end %>
                <% end %>
            <% end %>    
        </p>
    </div>
</div>





