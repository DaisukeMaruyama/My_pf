<div class="container">
    <h1 class="signup-heading mb-4" style="margin-top: 60px;">Register</h2>
    <div class="Signup-section ml-2">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


      <% if @user.errors.any? %>
        <div class="error-explanation">
          <h3><%= @user.errors.count %>errors from being saved.</h3>
          <% @user.errors.full_messages.each do |message| %>
            <ul>
              <li>ãƒ»<%= message %></li>
            </ul>
          <% end %>
        </div>
      <% end %>

      <div class="form-group row mt-2">
        <label class="col-md-3"><strong>First Name</strong></label>
        <div class="col-md-9">
          <%= f.text_field :first_name %>
        </div>
      </div>

      <div class="form-group row mt-2">
         <label class="col-md-3"><strong>Last Name</strong></label>
        <div class="col-md-9">
          <%= f.text_field :last_name %>
        </div>
      </div>

      <div class="form-group row mt-2">
        <label class="col-md-3"><strong>Email</strong></label>
        <div class="col-md-9">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="form-group row mt-2">
        <% if @minimum_password_length %>
        <label class="col-md-3"><strong>Password<br><span style="font-size: 8px;">(6 characters minimum)</span></strong></label>
        <div class="col-md-9">
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="form-group row mt-2">
        <label class="col-md-3"><strong>Password Confirmation</strong></label>
        <div class="col-md-9">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="form-group row mt-2">
        <label class="col-md-3"></label>
        <div class="col-md-3 mt-2">
          <%= f.submit "Register", class:"login-btn btn-lg" %>
        </div>
        <p class="col-sm-9 mt-4" style="margin-bottom: 80px;">Returning Customer? => <%= link_to 'Log in', new_user_session_path , style:"color: black;" %></p>
      </div>
    <% end %>


    </div>
</div>





